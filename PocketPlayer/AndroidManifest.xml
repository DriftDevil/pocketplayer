<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.psu.ktwok.pocketplayer"
    android:versionCode="1"
    android:versionName="0.5" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.psu.ktwok.pocketplayer.SplashScreen"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.TitleScreen"
            android:label="@string/title_activity_title_screen" >
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.AppInfo"
            android:label="@string/title_activity_app_info" >
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.LoginActivity"
            android:label="@string/title_activity_login" 
            android:windowSoftInputMode="stateHidden">
            
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.ContactMail"
            android:label="@string/title_contact_mail" >
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.CharSelect"
            android:label="@string/title_activity_game_select" >
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.GameSelect"
            android:label="@string/title_activity_game_select" >
        </activity>
        <activity
            android:name="edu.psu.ktwok.pocketplayer.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity 
            android:name="edu.psu.ktwok.pocketplayer.CharInfo"
            android:label="@string/title_activity_character_info" >
        </activity>
    </application>

</manifest>